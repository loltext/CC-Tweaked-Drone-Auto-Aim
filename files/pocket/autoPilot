
local basalt = require("basalt")
local drone= 0
rednet.open("back")
local home= "-5 140 -40"



local basalt = require("basalt")


local main = basalt.createFrame()
    :setSize(26, 20)
    :setBackground(colors.lightGray)


local element1 = main:addLabel()
    :setPosition(8, 1)
    :setSize(12, 1)
    :setText("AutoPilot-V1")
    :setBackground(colors.orange)
    :setForeground(colors.black)


local element2 = main:addInput()
    :setPosition(2, 7)
    :setSize(24, 1)
    :setPlaceholder("X,Y,Z")


local element3 = main:addButton()
    :setPosition(9, 6)
    :setSize(10, 1)
    :setText("Go to")
    :setBackground(colors.orange)
    :setForeground(colors.gray)


local element4 = main:addFrame()
    :setSize(1, 19)
    :setBackground(colors.gray)
    :setForeground(colors.gray)


local element5 = main:addFrame()
    :setPosition(51, 1)
    :setSize(1, 19)
    :setBackground(colors.gray)
    :setForeground(colors.gray)


local element6 = main:addFrame()
    :setPosition(1, 20)
    :setSize(26, 1)
    :setBackground(colors.gray)
    :setForeground(colors.gray)


local element7 = main:addFrame()
    :setPosition(2, 1)
    :setSize(6, 1)
    :setBackground(colors.gray)


local element8 = main:addFrame()
    :setPosition(32, 1)
    :setSize(19, 1)
    :setBackground(colors.gray)


local element9 = main:addFrame()
    :setPosition(20, 1)
    :setSize(7, 1)
    :setBackground(colors.gray)


local element10 = main:addFrame()
    :setPosition(26, 2)
    :setSize(1, 19)
    :setBackground(colors.gray)
    :setForeground(colors.gray)


local element11 = main:addButton()
    :setPosition(9, 9)
    :setSize(10, 1)
    :setText("Go Home")
    :setBackground(colors.orange)
    :setForeground(colors.gray)




element3:onClick(function()
    local msg = element2:getText()
    rednet.send(drone,msg)
end)



element11:onClick(function()
    rednet.send(drone,home)
end)



basalt.run()
